# =============================================================================
# SOTI Stella Sentinel - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values.
# NEVER commit the .env file to version control.
# =============================================================================

# Application Environment
# Options: local, development, staging, production
APP_ENV=local

# =============================================================================
# Frontend Configuration
# =============================================================================
# Port for the production (nginx) frontend container
FRONTEND_PORT=3000
# Port for the Vite dev server container (docker compose --profile frontend-dev up)
FRONTEND_DEV_PORT=5173

# =============================================================================
# PostgreSQL Backend Database
# =============================================================================
# This is where the application stores its own data (anomalies, baselines, etc.)
BACKEND_DB_HOST=postgres
BACKEND_DB_PORT=5432
BACKEND_DB_NAME=anomaly_detection
BACKEND_DB_USER=postgres
BACKEND_DB_PASS=changeme

# =============================================================================
# SOTI XSight SQL Server Configuration
# =============================================================================
# Source telemetry data: battery, network, app usage, device metrics, etc.
#
# For Docker deployments:
#   - Mac/Windows Docker Desktop: use host.docker.internal
#   - Linux Docker: use 172.17.0.1 or your host IP
#
# Connection string format: SERVER\INSTANCE or SERVER,PORT
DW_DB_HOST=your-server.example.com
DW_DB_PORT=1433
DW_DB_NAME=XSight
DW_DB_USER=
DW_DB_PASS=
DW_DB_DRIVER=ODBC Driver 18 for SQL Server

# =============================================================================
# SOTI MobiControl SQL Server Configuration (Optional)
# =============================================================================
# Device inventory, compliance status, and policy information.
# Used for enrichment data - not required for core anomaly detection.
MC_DB_HOST=your-server.example.com
MC_DB_PORT=1433
MC_DB_NAME=MobiControlDB
MC_DB_USER=
MC_DB_PASS=
MC_DB_DRIVER=ODBC Driver 18 for SQL Server

# =============================================================================
# LLM Configuration (Optional - for AI-powered explanations)
# =============================================================================
# Supports Ollama (recommended), Azure OpenAI, OpenAI, LM Studio, or vLLM
#
# Option 1: Ollama in Docker (default, included in docker-compose)
#   LLM_BASE_URL=http://ollama:11434
#   LLM_MODEL_NAME=llama3.2
#   After starting, pull a model: docker exec device-anomaly-ollama ollama pull llama3.2
#
# Option 2: Ollama running on host machine
#   - Mac/Windows Docker Desktop: http://host.docker.internal:11434
#   - Linux Docker: http://192.168.x.x:11434 (use your host IP)
#
# Option 3: LM Studio running on host machine
#   - Mac/Windows Docker Desktop: http://host.docker.internal:1234
#   - Linux Docker: http://192.168.x.x:1234 (use your host IP)
#
# Option 4: Azure OpenAI
#   LLM_BASE_URL=https://your-resource.openai.azure.com/
#   LLM_API_KEY=your-azure-api-key
#   LLM_API_VERSION=2024-12-01-preview
#   LLM_MODEL_NAME=gpt-4
#
# Option 5: OpenAI API
#   LLM_BASE_URL=https://api.openai.com/v1
#   LLM_API_KEY=sk-your-api-key
#   LLM_MODEL_NAME=gpt-4-turbo-preview
#
LLM_BASE_URL=http://ollama:11434
LLM_API_KEY=not-needed
LLM_MODEL_NAME=llama3.2
LLM_API_VERSION=

# =============================================================================
# SOTI MobiControl API Configuration (Optional)
# =============================================================================
# For real-time device data and actions via MobiControl REST API
# Leave blank if not using MobiControl API integration
MOBICONTROL_SERVER_URL=
MOBICONTROL_CLIENT_ID=
MOBICONTROL_CLIENT_SECRET=
MOBICONTROL_USERNAME=
MOBICONTROL_PASSWORD=
MOBICONTROL_TENANT_ID=
